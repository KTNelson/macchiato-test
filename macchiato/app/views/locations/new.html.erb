<h1>New Location</h1>

<%= form_for :location , url: locations_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :'Town/City' %><br>
    <%= f.text_field :towncity %>
  </p>

  <p>
    <%= f.label :'Zip/Postal' %><br>
    <%= f.text_field :zippostal %>
  </p>  

  <p>
    <%= f.submit %>
  </p>
<% end %>